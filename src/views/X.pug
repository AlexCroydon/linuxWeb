head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  title linuxWeb
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' type='text/css' href='./css/main.css')
  
  link(rel='stylesheet' type='text/css' href='./css/X/animations.css')
  link(rel='stylesheet' type='text/css' href='./css/X/icons.css')
  link(rel='stylesheet' type='text/css' href='./css/X/top_bar.css')
  link(rel='stylesheet' type='text/css' href='./css/X/popup_notification.css')
  link(rel='stylesheet' type='text/css' href='./css/X/applist.css')
  link(rel='stylesheet' type='text/css' href='./css/X/cta.css')
  link(rel='stylesheet' type='text/css' href='./css/X/calendar.css')

  link(rel='stylesheet' type='text/css' href='./css/X/system_popups/context_menu.css')
  link(rel='stylesheet' type='text/css' href='./css/X/system_popups/status_area.css')
  link(rel='stylesheet' type='text/css' href='./css/X/system_popups/activities_menu.css')
